@{
    ViewData["Title"] = "AuthorizationError";
    Layout = "_SimpleLayout";
}

<div class="error-display error-display-internal">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-10 mx-auto">
                                <h1 class="page-title-text mb-3 text-center">
                                    <span class="icon fas fa-user text-warning" aria-hidden="true"></span>
                                    <span>Authorization Error</span>
                                </h1>
                                <p>Unable to access this page with the current Role/Permissions. Please <a asp-action="Index">try again</a> or contact your administrator for assistance.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
