@model github_actions_demo.Features.ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_SimpleLayout";
}

<div class="error-display error-display-internal">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8 col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-10 mx-auto">
                                <h1 class="page-title-text mb-3 text-center">
                                    <span class="icon fas fa-bug text-danger" aria-hidden="true"></span>
                                    <span>Error</span>
                                </h1>
                                <p>An unexpected error occurred. Press the button below and we&rsquo;ll take you right back to the Main Page.</p>
                                <div class="text-center">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary" title="Go to the Dashboard">
                                        <span class="icon fas fa-home" aria-hidden="true"></span>
                                        <span>Go to the Dashboard</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
