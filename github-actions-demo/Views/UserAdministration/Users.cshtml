@model IEnumerable<github_actions_demo.Features.UserAdministration.Dto.UserDto>
@{
    ViewData["Title"] = "Users";
}

<div class="page-title">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="page-title-text">
                    <span>@ViewData["Title"]</span>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="content-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2 class="h3" id="allRoles">All Users</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <caption class="visually-hidden">This table contains a list of all users.</caption>
                        <thead>
                            <tr>
                                <th scope="col" id="userName">
                                    <a href="javascript://" role="button">
                                        <span class="icon fas fa-sort" aria-hidden="true"></span>
                                        <span>Name</span>
                                        <span class="visually-hidden">Sort the table by the data of this user name column</span>
                                    </a>
                                </th>
                                <th scope="col" id="userId">
                                    <a href="javascript://" role="button">
                                        <span class="icon fas fa-sort" aria-hidden="true"></span>
                                        <span>Roles</span>
                                        <span class="visually-hidden">Sort the table by the data of this roles column</span>
                                    </a>
                                </th>
                                <th scope="col" id="details">
                                    <span class="visually-hidden">Details</span>
                                </th>
                                <th scope="col" id="update">
                                    <span class="visually-hidden">Update</span>
                                </th>                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="align-middle" headers="userName">@user.UserName</td>
                                    <td class="align-middle" headers="userId" user-id="@user.Id"></td>
                                    <td class="align-middle" headers="details">
                                        <a class="btn btn-sm btn-secondary float-end" asp-action="UserDetails" asp-controller="UserAdministration" asp-route-id="@user.Id">Details</a>
                                    </td>
                                    <td class="align-middle" headers="update">
                                        <a class="btn btn-sm btn-primary float-end" asp-controller="UserAdministration" asp-action="UserRolesUpdate" asp-route-id="@user.Id">Update</a>
                                    </td>                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
