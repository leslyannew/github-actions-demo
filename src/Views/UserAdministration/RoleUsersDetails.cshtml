@model github_actions_demo.Features.UserAdministration.Dto.RoleUsers
@{
    ViewData["Title"] = "Users in " + @Model.Role.Name;
}

<div class="page-title">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="page-title-text">
                    <span>@ViewData["Title"]</span>
                </h1>
            </div>
        </div>
    </div>
</div>
<form method="get" asp-controller="UserAdministration" asp-action="RoleUsersUpdate" asp-route-id="@Model.Role.Id">
    <div class="content-container">
        <div class="container-fluid">
            <input type="hidden" name="roleName" value="@Model.Role.Name" />
            <input type="hidden" name="roleId" value="@Model.Role.Id" />
            <div class="row">
                <div class="col-12">
                    <h2 class="h3" id="inRoleUser">Users</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-12">

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <caption class="visually-hidden">This table contains a list of all users that are members in this role.</caption>
                            <thead>
                                <tr>
                                    <th scope="col" id="detailsUserName">
                                        <a href="javascript://" role="button">
                                            <span class="icon fas fa-sort" aria-hidden="true"></span>
                                            <span>Name</span>
                                            <span class="visually-hidden">Sort the table by the data of this user name column</span>
                                        </a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Members)
                                {
                                    <tr>
                                        <td class="align-middle" headers="detailsUserName">
                                            <span>@user.UserName</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="btn-container">
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Edit</button>
                <a class="btn btn-link" asp-controller="UserAdministration" asp-action="Roles">Cancel</a>
            </div>
        </div>
    </div>
</form>
