{
  "ConnectionStrings": {
    //"DefaultConnection": "Server=127.0.0.1;Database=github_actions_demo;User Id=sa;Password=MyP@ssword;MultipleActiveResultSets=true;TrustServerCertificate=true", //docker
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=github_actions_demo;MultipleActiveResultSets=true;Trusted_Connection=True;TrustServerCertificate=true", //localdb
  },
  "FeatureManagement": {
    "PrivacyPage": true
  },
  "App": {
    "CookieName": "dev.github_actions_demo",
    "Saml": {
      "GenerateMetadataFile": true,
      "MetadataFileName": "dev.Metadata",
      "EntityId": "local.ots.application.template",
      "ForceAuthn": true,
      "Certificate": {
        "FilePath": "Certificates/ots.application.template.pfx",
        "Password": "1234"
      },
      "MetadataAddress": "https://adfs.la.gov/federationmetadata/2007-06/federationmetadata.xml",
      "CookieName": "saml.dev.github_actions_demo"
    },
    "OpenTelemetry": {
      "Enable": false,
      "SerilogWriteToProviders": false,
      "Otlp": {
        "Enable": false
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "github_actions_demo"
    }
  }
}
