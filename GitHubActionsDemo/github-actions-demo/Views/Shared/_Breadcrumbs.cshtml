@{
    var controllerName = ViewContext?.RouteData?.Values["controller"]?.ToString() ?? "";
    var controllerNameDisplay = string.Concat(controllerName.Select(x => char.IsUpper(x) ? " " + x : x.ToString())).Trim();
    var actionName = ViewContext?.RouteData?.Values["action"]?.ToString() ?? "";
    var actionNameDisplay = string.Concat(actionName.Select(x => char.IsUpper(x) ? " " + x : x.ToString())).Trim();

    var name = string.IsNullOrEmpty(ViewData["Title"]?.ToString())
        ? actionNameDisplay
        : ViewData["Title"]?.ToString();
}

<nav class="breadcrumb-wrapper" aria-label="breadcrumbs">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">
                <span class="icon fas fa-home" aria-hidden="true"></span>
                <span class="visually-hidden">Home</span>
            </a>
        </li>
        @if (controllerName != "Home" && actionName != "Index")
        {
            <li class="breadcrumb-item">
                <a asp-controller="@controllerName" asp-action="Index">@controllerNameDisplay</a>
            </li>
        }
        <li class="breadcrumb-item active">
            <span>@name</span>
            <span class="icon fas fa-fw fa-eye" aria-hidden="true"></span>
        </li>
    </ol>
</nav>
